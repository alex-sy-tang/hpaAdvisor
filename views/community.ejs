<%-include('header')%>
<section id = "community-area">
  <div class="container">
    <div class="row align-items-start">


  <%usrContent.forEach(ele=>{%>
        <div class="col-md-4">
          <div class="card mb-5" style="width: 18rem;">


            <img src="<%=ele.imageUrl %>" class="card-img-top posts" alt="...">

            <div class="card-body">
              <h5 class="card-title"><%=ele.abbr%></h5>
              <form class="" action="/community" method="post">
                <button type="submit" class="btn btn-danger" name = "more" value = "<%=ele._id%>">Read More</button>
              </form>
            </div>
          </div>
        </div>
  <%})%>
  <% if(usrContent.length <=3){%>
    <div class="filler">

    </div>
  <%}%>
  </div>
  </div>
</section>

