<%- include('header')%>
<section id = "account">
  <div class="container">
    <div class="row align-items-start">
      <div class="col-md-4">
        <img src="<%=usrContent.profileUrl%>" alt="profile image">
      </div>
      <div class="col-md-8">
        <form action = "/pImage" method = "post" enctype = "multipart/form-data">
            <div class="form-group">
              <label for="exampleFormControlFile1">Profile Image: </label>
              <input name = "image" type="file" class="form-control-file" id="exampleFormControlFile1" accept = "image/*">
              <input class = "btn btn-outline-dark" type="submit" name="button">
            </div>
          </form>
        <h5 class = "mt-5">Username:</h5>
        <p><%=usrContent.username%></p>
      </div>
    </div>
  </div>
</section>


<%- include('footer')%>
